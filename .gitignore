# Wordpress - ignore core, configuration, examples, uploads and logs.
# https://github.com/github/gitignore/blob/main/WordPress.gitignore
# -------------------
# 🧠 سیستم عامل / ابزار
# -------------------
.DS_Store
Thumbs.db
ehthumbs.db
desktop.ini

# -------------------
# 💻 محیط توسعه
# -------------------
.vscode/
.idea/
*.sublime-workspace
*.sublime-project

# -------------------
# 🛠 PHP & Composer
# -------------------
vendor/
composer.lock

# -------------------
# 🔐 فایل‌های حساس وردپرس
# -------------------
wp-config.php
.htaccess
web.config

# -------------------
# 🧪 تست و کش‌ها
# -------------------
*.log
*.sql
*.zip
*.tar.gz
*.gz
*.bak
*.tmp
*.swp
*.orig

# -------------------
# 🖼 پوشه‌های پویا وردپرس
# -------------------
wp-content/uploads/
wp-content/cache/
wp-content/upgrade/
wp-content/backup-*/ 
wp-content/backups/
wp-content/mu-plugins/

# -------------------
# 🔌 پلاگین و قالب‌ها (در صورتی که فقط بعضی‌ها مهم هستن)
# اگر نمی‌خوای همه پلاگین‌ها رو track کنی، اینجا تنظیم کن:
#wp-content/plugins/*
#!wp-content/plugins/my-plugin/

#wp-content/themes/*
#!wp-content/themes/my-theme/

# -------------------
# ⚙️ Env & Config
# -------------------
.env
.env.*
.env.local
.env.development
.env.production
.env.testing

# -------------------
# 💡 مخفی‌سازی فایل‌های شخصی توسعه‌دهنده
# -------------------
node_modules/
npm-debug.log
yarn-error.log
package-lock.json